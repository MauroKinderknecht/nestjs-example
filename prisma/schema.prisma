generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

generator dto {
  provider                        = "prisma-generator-nestjs-dto"
  output                          = "../src/models"
  outputToNestJsResourceStructure = "true"
  dtoSuffix                       = "DTO"
  reExport                        = "true"
  fileNamingStyle                 = "camel"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brand {
  id       String    @id @default(uuid())
  name     String
  products Product[]
}

model Product {
  id      String  @id @default(uuid())
  sku     String  @unique
  model   String  @unique
  name    String
  specs   Json
  reviews Float
  brand   Brand   @relation(fields: [brandId], references: [id])
  // @DtoCreateOptional
  brandId String
  Price   Price[]
}

model Price {
  id        String    @id @default(uuid())
  // @DtoCreateOptional
  offer     Offer     @default(NORMAL)
  price     Int
  product   Product   @relation(fields: [productId], references: [id])
  // @DtoCreateOptional
  productId String
  // @DtoCreateOptional
  asOf      DateTime  @default(now())
  // @DtoCreateOptional
  until     DateTime?
}

enum Offer {
  NORMAL
  SALE
}
